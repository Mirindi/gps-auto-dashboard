<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <padding
                android:top="1.5dp"
                android:left="1.5dp"
                android:right="1.5dp"
                android:bottom="1.5dp" />
            <solid
                android:color="@android:color/transparent" />
            <stroke
                android:color="#000"
                android:width="1dp" />
            <corners
                android:radius="4dp" />
        </shape>
    </item>

</selector>