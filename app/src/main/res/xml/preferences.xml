<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/pref_title_gps_settings"
        android:key="pref_key_gps_settings">

        <EditTextPreference
            android:key="pref_key_dist_acc_min"
            android:title="@string/pref_title_dist_acc_min"
            android:summary="@string/pref_summary_dist_acc_min"
            android:defaultValue="@string/pref_value_dist_acc_min"
            android:inputType="numberDecimal" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/pref_title_accel_settings"
        android:key="pref_key_accel_settings">

        <EditTextPreference
            android:key="pref_key_max_neg_accel"
            android:title="@string/pref_title_max_neg_accel"
            android:summary="@string/pref_summary_max_neg_accel"
            android:defaultValue="@string/pref_value_max_neg_accel"
            android:inputType="numberDecimal" />

        <EditTextPreference
            android:key="pref_key_max_pos_accel"
            android:title="@string/pref_title_max_pos_accel"
            android:summary="@string/pref_summary_max_pos_accel"
            android:defaultValue="@string/pref_value_max_pos_accel"
            android:inputType="numberDecimal" />

    </PreferenceCategory>

</PreferenceScreen>